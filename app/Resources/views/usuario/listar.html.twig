{% extends 'layout.html.twig' %}

{% block title %}
    Listado de usuarios
{% endblock %}

{% block content %}
    <link rel="stylesheet" href="{{ asset('css/usuario_listar.css') }}">
    <div class="contenidoPagina">
        <h1>Listado de usuarios</h1>
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>NÃºmero de partidas</th>
                <th>Rol</th>
                <th>Fecha de registro</th>
            </tr>
            </thead>
            <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td class="nombre">{{ usuario.nombre }}</td>
                    <td class="numPartidas">{{ usuario.partidas|length }}</td>
                    <td class="rol">
                        {% if usuario.administrador == true %}
                            Administrador
                        {% else %}
                            Jugador
                        {% endif %}
                    </td>
                    <td class="fechaRegistro">{{ usuario.fechaRegistro|date('d/m/Y') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
